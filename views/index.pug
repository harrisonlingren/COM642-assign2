extends layout
block content
  div.header
    h1= title
    p.subtitle Welcome to #{title}, #{user}!
    div.col-lg-5
      div.media
        a.pull-left(href="#")
          img.media-object.dp.img-circle(src="http://www.qygjxz.com/data/out/190/5691490-profile-pictures.png")
        div.media-body
          h4.media-heading Hardik Sondagar <small> Belfast </small>
            h5 Software Developer at <a href="http://gridle.in">Gridle.in</a>
            hr(style="margin:8px auto")
            span.label.label-default HTML5/CSS3
            span.label.label-default jQuery
            span.label.label-info CakePHP
            span.label.label-default Android
  div.sidenav(id="mySidenav")
    a.close CLOSE
    a(href="#") WErfffew
    a(href="#") WErfffew
    a(href="#") WErfffew
    a(href="#") WErfffew
    a(href="#") WErfffew
    a(href="#") WErfffew
  span.open OPEN
  div.cardContainer
    div.itemsView
      each item in todoItems
        div.card
          div.card-block
            h4.card-title= item.title
            p.card-text
            input(type='checkbox' id='todoItemCheck'+item.id checked=item.done)