extends layout

block content
  h1= title
  p Welcome to #{title}, #{user}!

  div.itemsView
    each item in todoItems
      div.card
        div.card-block
          h4.card-title(id='itemtitle'+item.id)= item.title
          p.card-text(id='itemtext'+item.id)= itemtext
          input(type='checkbox' id='todoItemCheck'+item.id checked=item.done)

 
            
           
